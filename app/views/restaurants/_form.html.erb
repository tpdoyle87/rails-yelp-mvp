<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for (@restaurant) do |f| %>
        <%= f.input :name, placeholder: 'Restaurants Name' %>
        <%= f.input :address, placeholder: 'Restaurants address'%>
        <%= f.input :phone_number, placeholder: 'Restaurants phone number' %>
        <%= f.input :category, placeholder: 'Restaurants category'%>

        <%= f.submit "add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>



