<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h1> Resturants for all occassions </h1>

      <h3><%= @restaurant.name %></h3>
      <h5><%= @restaurant.address %></h5>
      <h5><%= @restaurant.phone_number %></h5>
      <h5><%= @restaurant.category %></h5>
      <span><%= link_to "Edit", edit_restaurant_path %></span>
      <span><%= link_to "Review", new_restaurant_review_path(@restaurant) %></span>
    </div>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <% @reviews.each do |review| %>
      <div class='reviews'>
        <p><%= review.content %></p>
        <span><%="*" * review.rating %></span>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= render './reviews/form' %>
