<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, placeholder: 'Review' %>
        <%= f.input :rating, placeholder: 'Restaurants Rating 0 - 5'%>

        <%= f.submit "add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>



